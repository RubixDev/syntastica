{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "syntastica",
  "version": "0.3.1",
  "description": "Modern and easy syntax highlighting using tree-sitter",
  "keywords": ["tree-sitter", "highlight", "parsing", "syntax"],
  "homepage": "https://github.com/RubixDev/syntastica/tree/main/syntastica-js#readme",
  "bugs": "https://github.com/RubixDev/syntastica/issues",
  "license": "GPL-3.0-only",
  "author": "RubixDev",
  "funding": {
    "url": "https://ko-fi.com/rubixdev",
    "type": "ko-fi"
  },
  "files": ["pkg/**"],
  "module": "pkg/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RubixDev/syntastica.git",
    "directory": "syntastica-js"
  },
  "scripts": {
    "prebuild": "rm -rf pkg && mkdir -p pkg",
    "build:wasm": "cargo build --release --target wasm32-unknown-emscripten",
    "postbuild:wasm": "cp ${CARGO_TARGET_DIR:-target}/wasm32-unknown-emscripten/release/syntastica*js.{wasm,js} pkg",
    "prebuild:js": "cp src/syntastica-js.d.ts pkg/",
    "build:js": "tsc",
    "build": "npm-run-all build:*",
    "doc": "typedoc"
  },
  "devDependencies": {
    "@types/emscripten": "^1.39.6",
    "npm-run-all": "^4.1.5",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
  }
}
